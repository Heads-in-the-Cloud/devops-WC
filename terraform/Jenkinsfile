pipeline {

    agent any




    stages {

        stage('Terraform init') {


                steps {
                dir("terraform") {

                    sh 'terraform init'
                }
                
            }
        }

        stage('Terraform action') {

                    steps {
                    dir("terraform") {

                        sh "terraform ${action} -auto-approve"
                    }
            } 

        }



    }




}